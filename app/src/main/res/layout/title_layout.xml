<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/vSearchBorder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:alpha="0"
        android:contentDescription="@string/app_name"
        android:src="@drawable/merchant_search_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/vBack"
        app:layout_constraintRight_toLeftOf="@id/vCollection"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vBack"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@drawable/back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vMenu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_menu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vTogether"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_together"
        app:layout_constraintRight_toLeftOf="@+id/vMenu"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/vCollection"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_collection"
        app:layout_constraintRight_toLeftOf="@+id/vTogether"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vSearch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_search"
        app:layout_constraintRight_toLeftOf="@+id/vCollection"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vSearchHint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:alpha="0"
        android:gravity="start|center_vertical"
        android:text="请输入商品名称"
        android:textColor="#989898"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/vSearchBorder"
        app:layout_constraintLeft_toLeftOf="@id/vSearchBorder"
        app:layout_constraintRight_toRightOf="@id/vSearchBorder"
        app:layout_constraintTop_toTopOf="@id/vSearchBorder" />


</androidx.constraintlayout.widget.ConstraintLayout>